<odoo>



    <record id="crm_lead_view_inherit_to_add_fields" model="ir.ui.view">
        <field name="name">crm.lead.view.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_row o_row_readonly' and .//field[@name='phone']]" position="after">
                
                <label for="topic_of_interest_wf_lead" class="oe_inline"/>
                <div class="o_cell flex-grow-1 flex-sm-grow-0">
                    <field name="topic_of_interest_wf_lead"/>
                </div>
                <label for="service_interest_lead" class="oe_inline"/>
                <div class="o_cell flex-grow-1 flex-sm-grow-0">
                    <field name="service_interest_lead" widget="many2many_tags"/>
                </div>
                
            </xpath>
            
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="software_interest_lead" widget="many2many_tags"/>
                <field name="lead_source_lead"/>
            </xpath>
            
                 
               
        </field>
    </record>
</odoo>